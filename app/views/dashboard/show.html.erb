<h1> <%= current_user.username %>'s profile</h1>

<div class="profile">
  <img src= <%="#{current_user.avatar_url}"%> alt="user picture">
  <p>Stared Repos:</p>
  <% @starred_repos.each do |s| %>
    <p> Repo Name: <%= s['name'] %> </p>
    <p> Repo Owner: <%= s['owner']['login'] %> </p>
  <% end %>

  <p>Followers:</p>
  <% @followers.each do |f| %>
    <p> <%= f["login"] %> </p>
    <img src= <%= f["avatar_url"] %> alt="following picture">
  <% end %>
  <p>Following:</p>
  <% @following.each do |f| %>
    <p> <%= f["login"] %> </p>
    <img src= <%= f["avatar_url"] %> alt="following picture">
  <% end %>
</div>
